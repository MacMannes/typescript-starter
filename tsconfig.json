{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "type": "module",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["./utils/*"],
    }
  },
  "exclude": ["node_modules"]
}