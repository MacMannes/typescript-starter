{
  "name": "typescript-starter",
  "version": "1.0.0",
  "author": "Andr√© Mathlener",
  "description": "A simple TypeScript Starter Project",
  "keywords": [],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "vitest run src/",
    "test:watch": "vitest src/",
    "test:coverage": "vitest run src/ --coverage",
