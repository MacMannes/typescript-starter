    "@types/node": "^22.7.6",
    "@vitest/coverage-v8": "^2.1.3",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "typescript-eslint": "^8.12.2",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
